<%= form_with(model: @book, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :title %>

    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :publish_year %>

    <%= f.text_field :publish_year, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :pages %>

    <%= f.text_field :pages, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: "3", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image %>

    <%= f.file_field :image, class: "form-control" %>
  </div>

  <%= f.hidden_field :author_id, value: @author.id %>

  <%= f.submit "Create book", class: "btn btn-block btn-outline-secondary" %>
<% end %>
