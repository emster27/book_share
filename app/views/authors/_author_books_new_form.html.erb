<!-- Form book start -->
<%= form_with(model: @book, local: true) do |f| %>
<!-- Form book end -->

  <!-- Label and input for title start -->
  <div class="form-group">
    <%= f.label :title %>

    <!-- Input for title start -->
    <%= f.text_field :title, class: "form-control" %>
    <!-- Input for title end -->
  </div>
  <!-- Label and input for title end -->

  <!-- Label and input for publish_year start -->
  <div class="form-group">
    <%= f.label :publish_year %>

    <!-- Input for publish_year start -->
    <%= f.text_field :publish_year, class: "form-control" %>
    <!-- Input for publish_year end -->
  </div>
  <!-- Label and input for publish_year end -->

  <!-- Label and input for pages start -->
  <div class="form-group">
    <%= f.label :pages %>

    <!-- Input for pages start -->
    <%= f.text_field :pages, class: "form-control" %>
    <!-- Input for pages end -->
  </div>
  <!-- Label and input for pages end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <%= f.label :description %>
    <!-- Input for description start -->
    <%= f.text_area :description, rows: "3", class: "form-control" %>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for image start -->
  <div class="form-group">
    <%= f.label :image %>

    <!-- Input for image start -->
    <%= f.file_field :image, class: "form-control" %>
    <!-- Input for image end -->
  </div>
  <!-- Label and input for image end -->

  <!-- Label and input for author_id start -->
  <!-- Input for author_id start -->
  <%= f.hidden_field :author_id, value: @author.id %>
  <!-- Input for author_id end -->
  <!-- Label and input for author_id end -->

  <%= f.submit "Create book", class: "btn btn-block btn-outline-secondary" %>
<% end %>
