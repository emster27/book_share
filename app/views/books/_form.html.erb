<% was_validated = book.errors.any? %>

<%= form_with(model: book, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% title_class = "form-control" %>
    <% title_was_invalid = book.errors.include?(:title) %>

    <% if was_validated %>
      <% if title_was_invalid %>
        <% title_class << " is-invalid" %>
      <% else %>
        <% title_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :title %>
    <%= f.text_field :title, class: title_class, placeholder: "Enter title" %>
    <% if title_was_invalid %>
      <% book.errors.full_messages_for(:title).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% publish_year_class = "form-control" %>
    <% publish_year_was_invalid = book.errors.include?(:publish_year) %>

    <% if was_validated %>
      <% if publish_year_was_invalid %>
        <% publish_year_class << " is-invalid" %>
      <% else %>
        <% publish_year_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :publish_year %>
    <%= f.number_field :publish_year, class: publish_year_class, placeholder: "Enter publish year" %>
    <% if publish_year_was_invalid %>
      <% book.errors.full_messages_for(:publish_year).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% page_class = "form-control" %>
    <% page_was_invalid = book.errors.include?(:page) %>

    <% if was_validated %>
      <% if page_was_invalid %>
        <% page_class << " is-invalid" %>
      <% else %>
        <% page_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :pages %>
    <%= f.number_field :pages, class: page_class, placeholder: "Enter page" %>
    <% if page_was_invalid %>
      <% book.errors.full_messages_for(:page).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% description_class = "form-control" %>
    <% description_was_invalid = book.errors.include?(:description) %>

    <% if was_validated %>
      <% if description_was_invalid %>
        <% description_class << " is-invalid" %>
      <% else %>
        <% description_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :description %>
    <%= f.text_area :description, class: description_class, placeholder: "Enter description" %>
    <% if description_was_invalid %>
      <% book.errors.full_messages_for(:description).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% image_class = "form-control" %>
    <% image_was_invalid = book.errors.include?(:image) %>

    <% if was_validated %>
      <% if image_was_invalid %>
        <% image_class << " is-invalid" %>
      <% else %>
        <% image_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
    <% if image_was_invalid %>
      <% book.errors.full_messages_for(:image).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% author_class = "form-control" %>
    <% author_was_invalid = book.errors.include?(:author) %>

    <% if was_validated %>
      <% if author_was_invalid %>
        <% author_class << " is-invalid" %>
      <% else %>
        <% author_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :author_id %>
    <%= f.collection_select :author_id, Author.all, :id, :to_s, {}, class: "form-control" %>
    <% if author_was_invalid %>
      <% book.errors.full_messages_for(:author).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
