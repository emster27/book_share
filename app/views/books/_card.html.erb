<div class="card mb-3">
  <h2 class="card-header h4">
    Book #<%= book.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Title</dt>
      <dd><%= book.title %></dd>

      <dt>Publish year</dt>
      <dd><%= book.publish_year %></dd>

      <dt>Pages</dt>
      <dd><%= book.pages %></dd>

      <dt>Description</dt>
      <dd><%= book.description %></dd>

      <dt>Image</dt>
      <dd>
        <%= cl_image_tag @book.image, class: "img-fluid" %>
      </dd>

      <dt>Author</dt>
      <dd>
        <% if @book.author.present? %>
          <%= link_to book.author, book.author %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back book, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_book_url(book), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to book, method: :delete, data: { confirm: "Do you really want to delete this book?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(book.updated_at) %> ago
  </div>
</div>
